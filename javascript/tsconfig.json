{
  "compilerOptions": {
    // Modern target for Next API routes and CLI (topâ€‘level await, etc.)
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    // ESM + bundler resolution (Next default)
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    // Quality-of-life and safety
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    // Test + Node globals available everywhere (simple path)
    "types": [
      "vitest/globals",
      "node"
    ],
    // Aliases (so `@/lib/...` works in API routes and scripts)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // Extra strictness
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    // Next plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.*",
    "postcss.config.*",
    "tailwind.config.*"
  ],
  "exclude": [
    "node_modules"
  ]
}
